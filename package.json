{
  "name": "@hustlahusky/website",
  "description": "hustlahusky.me website",
  "author": {
    "name": "Constantine Karnaukhov",
    "email": "genteelknight@gmail.com"
  },
  "version": "2.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "dependencies": {
    "typeit": "^5.10.6",
    "uikit": "^3.0.0-rc.15"
  },
  "devDependencies": {
    "gh-pages": "^1.2.0",
    "husky": "^1.0.0-rc.13",
    "less": "^3.8.1",
    "lint-staged": "^7.2.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "lint": "tslint ./src/*.ts",
    "start": "CHOKIDAR_USEPOLLING=1 parcel serve src/index.html --open",
    "build": "NODE_ENV=production parcel build src/index.html --public-url .",
    "watch": "CHOKIDAR_USEPOLLING=1 parcel watch src/index.html",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hustlahusky/hustlahusky.github.io.git"
  },
  "prettier": {
    "print-width": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
