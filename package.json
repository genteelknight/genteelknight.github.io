{
  "name": "@hustlahusky/website",
  "description": "hustlahusky.me website",
  "author": {
    "name": "Constantine Karnaukhov",
    "email": "genteelknight@gmail.com"
  },
  "version": "2.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "dependencies": {
    "@types/gravatar": "^1.4.28",
    "@types/jquery": "^3.3.22",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.10",
    "chart.js": "^2.7.3",
    "gravatar": "^1.8.0",
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "typeit": "^5.10.7",
    "uikit": "^3.0.0-rc.24"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.1.0",
    "gh-pages": "^1.2.0",
    "husky": "^1.2.0",
    "less": "^3.8.1",
    "lint-staged": "^7.3.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "lint": "tslint ./src/*.ts",
    "start": "concurrently -k -p '[{name}]' -n 'parcel,browsersync' -c 'gray.bold,red.bold' 'npm run watch' 'npm run serve'",
    "serve": "browser-sync start --config bs-config.js",
    "prebuild": "rm -rf dist/*",
    "build": "NODE_ENV=production parcel build src/index.html --public-url .",
    "watch": "parcel watch src/index.html --no-hmr",
    "predeploy": "npm run build && cp CNAME dist/",
    "deploy": "gh-pages -d dist -b master"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hustlahusky/hustlahusky.github.io.git"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
